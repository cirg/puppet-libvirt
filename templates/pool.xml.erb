<pool type='<%= pool_type %>'>
  <name><%= name %></name>
  <uuid><%= uuid %></uuid>
  <capacity>0</capacity>
  <allocation>0</allocation>
  <available>0</available>
  <source>
<% if pool_type == 'iscsi' -%>
    <host name='<%= host_name %>'/>
    <device path='<%= device_path %>'/>
<% end -%>
  </source>
  <target>
    <path><%= target_path %></path>
    <permissions>
      <mode>0700</mode>
      <owner>-1</owner>
      <group>-1</group>
    </permissions>
  </target>
</pool>
